#!/bin/sh

cd `dirname $0`/.. || exit 1
rm -f deploy/shutdown.xml
java -server \
    -XX:+IgnoreUnrecognizedVMOptions \
    -Dappname=jPOSEE-testbed \
    -Duser.name=admin \
    -Dcom.sun.management.jmxremote \
    -Duser.name=admin \
    -Xloggc:log/gc.log \
    -Dorg.mortbay.xml.XmlParser.NotValidating=true \
    -Xmx1G -Xms1G \
    -jar jposee-@jarname@ "$@"

